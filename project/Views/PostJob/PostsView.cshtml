@model IEnumerable<project.Models.JobPost>

@{
    ViewBag.Title = "PostsView";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}

<h2>PostsView</h2>

<table class="table">
    <tr>
        <th>
