<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0">*@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="#page-top"><p>Wazifati</p></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars ms-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                    @if (Session["userid"] != null)
                    {
                        <!-- <li class="nav-item"><a class="nav-link" href="#portfolio">Portfolio</a></li>-->

                        <li class="nav-item"><a class="nav-link" href="/Experiences/Index">Experience</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Educations/Index">Education</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/MyLogout/">Log out</a></li>
                        <!-- <li class="nav-item"><a class="nav-link" href="#Search">Search</a></li>
                        <li class="nav-item"><a class="nav-link" href="#ApplyJob">Apply Job</a></li>-->
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/MyLogin/">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/MyEmployeeRegister/">Employee's SignUp</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/MyEmployerRegister/">Employer's SignUp</a></li>

                    }
                    <!--Make it as a drop down list bta3tine iza employee aw employer-->
                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead">
        <div class="container">
            <div class="masthead-subheading">Employee's Page!</div>
            <div class="masthead-heading text-uppercase">Drop Down Your Data </div>

        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer py-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start" style="">Copyright &copy; Your Website 2023</div>
                    <a class="link-dark text-decoration-none me-3" href="#!"
                       style="position: absolute;
                            right: -400px;">Privacy Policy</a>
                    <a class="link-dark text-decoration-none" href="#!" style="position:absolute;
                            right:-500px; ">Terms of Use</a>
                    <!--  <div class="col-lg-4 my-3 my-lg-0">
                    <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                                    </div>-->
                    <!--<div class="col-lg-4 text-lg-end">-->

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
